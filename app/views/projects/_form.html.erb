    var taskTemplate = <%= generate_nested_model_template(form, :tasks).to_json %>;

    document.observe("dom:loaded", function() {
      $("add_task_link").observe("click", addNestedItem);
      $("tasks").delegate("click", { ".remove_task_link": removeNestedItem });
      $(document.forms[0]).focusFirstElement();
    });
    // -->
  </script>
<% end %>

<%= form.error_messages %>

<div class="row">
  <%= form.label :name %>
  <%= form.text_field :name %>
</div>

<fieldset>
  <legend>Tasks</legend>

  <div id="tasks">
    <% form.fields_for :tasks do |fields| %>
      <%= render :partial => "task", :locals => { :fields => fields } %>
    <% end %>
  </div>

  <%= link_to "Add a task", "#taskTemplate", :rel => "tasks", :id => "add_task_link" %>
</fieldset>
